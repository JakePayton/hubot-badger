module.exports = (robot) ->
  robot.respond /tigers/i, (msg) ->
    now = new Date()
    next_week = new Date(now.getTime() + 7 * 24 * 60 * 60 * 1000)

    games = _.filter(dates, (d) ->
      d.date.getTime() > now.getTime() && d.date.getTime() < next_week.getTime())

    for game in games
      msg.send (game.date.getMonth() + 1) + "/" +  game.date.getDate() + " " + game.desc
